<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Exam Registration</title>
    <link rel="stylesheet" href="/css/adminHome.css"/>
</head>
<body>
    <% if (success && success.length > 0) { %> 
        <div class="alert success"
        ><%= success %>
    </div>
     <% } %>
     <% if (error && error.length > 0) { %> 
        <div class="alert error">
            <%= error %>
        </div> 
        <% } %>
    <header>
        <h1>Welcome to UVCE Page</h1>
        <nav>
            <a href="/admin/logout">Logout</a>
        </nav>
    </header>

    <main>
        <div class="admin">
            <h1>Welcome <%= admin.name %></h1>
           

            <div class="exams">
                <% if (exams && exams.length > 0) { %>
                    <% exams.forEach((exam) => { %>
                        <div class="exam">
                            <h1><%= exam.examId %></h1>
                            <h2>Start Date: <%= exam.registerStartDate %></h2>
                            <h6>Fee: â‚¹<%= exam.fee %></h6>
                            <h6>registerd student <%= exam.students.length %></h6>
                            <a href="/exam/registration/<%= exam.examId %>">Register</a>
                        </div>
                    <% }) %>
                <% } else { %>
                    <div>
                        <h1>No exams are going on right now.</h1>
                    </div>
                <% } %>
            </div>

             <div class="createExam">
               <a href="/exam">Create exam</a>
            </div>
        </div>
    </main>

    <footer>
        <small>&copy; <%= new Date().getFullYear() %> Exam Registration</small>
    </footer>

    <script src="/js/main.js"></script>
</body>
</html>
