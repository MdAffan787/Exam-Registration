<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Exam Registration</title>
    <link rel="stylesheet" href="/css/examDeatils.css"/>
</head>
<body>
    <% if (success && success.length > 0) { %> 
        <div class="alert success"
        ><%= success %>
    </div>
     <% } %>
     <% if (error && error.length > 0) { %> 
        <div class="alert error">
            <%= error %>
        </div> 
        <% } %>
    <header>
        <h1>Welcome to UVCE Page</h1>
        <nav>
            <a href="/student/logout">Logout</a>
        </nav>
    </header>

    <main>
        <h2><%= exam.examId%></h2>
        <section class="subjects">
  <table>
    <thead>
      <tr>
        <th>Subject Name</th>
        <th>Exam Date</th>
        <th>Duration</th>
      </tr>
    </thead>
    <tbody>
      <% exam.subjects.forEach(sub => { %>
        <tr>
          <td><%= sub.subjectName %></td>
          <td><%= sub.examDate.toDateString() %></td>
          <td><%= sub.duration %> hrs</td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</section>

        <h2>Exam Fee: â‚¹<%= exam.fee %></h2>
        <a href="/payment/<%= exam.examId %>/<%= student._id %>">pay</a>
        

    </main>

    <footer>
        <small>&copy; <%= new Date().getFullYear() %> Exam Registration</small>
    </footer>

    <script src="/js/main.js"></script>
</body>
</html>
